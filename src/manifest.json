{
  "manifest_version": 2,
  "name": "My Anime Scheduler",
  "description": "“MAS”, or “My Anime Scheduler” is a Chromium extension that helps you track your currently-watching Anime.",
  "version": "0.1.0",
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png",
    "256": "assets/icon-256.png",
    "512": "assets/icon-512.png"
  },
  "browser_action": {
    "default_icon": "assets/icon-512.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications"
  ],
  "web_accessible_resources": [
    "*",
    "assets/*"
  ]
}
